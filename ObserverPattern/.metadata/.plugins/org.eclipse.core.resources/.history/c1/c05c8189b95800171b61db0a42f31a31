package com.example;

import java.util.ArrayList;

/**
 * 被观察这的是实现类，韩非子的加强版本
 * @author Still2Almost
 *
 */
public class HanFeiZiZdd implements IHanFeiZIi,Observable{
	//定义一个变长数据，存放所有的观察者
	private ArrayList<Observer> observableList = new ArrayList<Observer>();
	
	//增加观察者
	@Override
	public void addObservable(Observer observer) {
		this.observableList.add(observer);
	}
	//删除观察者
	public void deleteObservable(Observer observer) {
		this.observableList.remove(observer);
	}
	//通知所有的观察者
	public void notifObservers(String context) {
		for(Observer observable: observableList){
			observable.
		}
	}

	@Override
	public void haveBreakfast() {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void haveFun() {
		// TODO Auto-generated method stub
		
	}

}
